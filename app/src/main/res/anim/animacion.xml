<!--
Alpha: Visualizar el texto de menos a más el Titulo

-->

    <!--
        Retardo para ejecutar una animación tras otra se utiliza startOffset
        La anterior animación tiene una duracción de 3 segundos.

     -->


    <alpha

        android:startOffset="3000"

        />




